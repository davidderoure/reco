# Copy this file to .env and adjust values for your environment.
# .env is git-ignored and should never be committed.

# ── Python gRPC server (C# connects to us) ────────────────────────────────
GRPC_SERVER_HOST=0.0.0.0
GRPC_SERVER_PORT=50051

# Number of threads available for concurrent gRPC request handling
GRPC_MAX_WORKERS=10

# ── C# story / state server (Python connects to this) ────────────────────
CSHARP_SERVER_ADDRESS=localhost:50052

# ── Story catalogue ───────────────────────────────────────────────────────
# How often (seconds) to refresh the story catalogue from the C# server
CATALOGUE_REFRESH_INTERVAL_SECONDS=300

# ── User state persistence ────────────────────────────────────────────────
# How often (seconds) to persist all user state back to the C# server
STATE_PERSIST_INTERVAL_SECONDS=60
